{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"],
            "@resources/*": ["resources/*"],
            "@vendor/*": ["vendor/*"],
            "@public/*": ["public/*"],
            "@base/*": ["./*"],
            "@asset/*": ["public/*"]
        },
        "target": "es5",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "allowJs": true,
        "experimentalDecorators": true
    },
    "include": [
        "resources/js/**/*"
    ],
    "exclude": [
        "node_modules", "public"
    ]
}
